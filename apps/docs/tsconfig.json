{
  "extends": "@repo/typescript-config/nextjs.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "paths": {
      "baseUrl": ["."],
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/ui": ["../../packages/ui/src/index.ts"]
    },
    "jsx": "preserve",

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["dist", "build", "node_modules"]
}
